{
  "name": "goread2-frontend",
  "version": "1.0.0",
  "description": "GoRead2 Frontend Testing",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "build": "npm run build:css && npm run build:js",
    "build:css": "csso web/static/css/styles.css --output web/static/css/styles.min.css",
    "build:js": "terser web/static/js/app.js -o web/static/js/app.min.js --compress --mangle",
    "watch:js": "chokidar 'web/static/js/app.js' -c 'npm run build:js'"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "chokidar-cli": "^3.0.0",
    "csso-cli": "^4.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser": "^5.43.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/web/tests/app-core.test.js",
      "**/web/tests/font-choice.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/web/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "web/static/js/**/*.js",
      "!web/static/js/**/*.min.js"
    ],
    "coverageDirectory": "web/coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "dompurify": "^3.2.6"
  }
}
